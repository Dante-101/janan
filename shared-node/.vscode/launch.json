{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.ts",
            "stopOnEntry": false,
            "args": [
                "static=\"../../../public-html\""
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ]
        },
        {
            "name": "Mocha + Build",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "env": {
                "NODE_PATH": "./build",
                "NODE_ENV": "test"
            },
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/build/shared-node/test/**/*.js"
            ],
            "cwd": "${workspaceFolder}",
            // Workspace relative or absolute path to the runtime executable to be used. Default is the runtime executable on the PATH.
            //"runtimeExecutable": null,
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ]
        },
        {
            "name": "Mocha - No Build",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "env": {
                "NODE_PATH": "./build",
                "NODE_ENV": "test"
            },
            "args": [
                "--require",
                "./build/shared-node/test/setup",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/build/shared-node/test/**/*.js"
            ],
            "cwd": "${workspaceFolder}",
            // Workspace relative or absolute path to the runtime executable to be used. Default is the runtime executable on the PATH.
            //"runtimeExecutable": null,
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ]
        }
    ]
}